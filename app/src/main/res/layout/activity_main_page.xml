<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginTop="@dimen/_196sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_40sdp"
        android:background="@drawable/button_radius"
        android:drawableEnd="@drawable/baseline_delete_outline_24"

        android:onClick="onSmartDustbinClick"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:text="Smart Dustbin"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_40sdp"


        android:layout_marginTop="@dimen/_32sdp"
        android:background="@drawable/button_radius"
        android:drawableEnd="@drawable/baseline_display_settings_24"
        android:onClick="onSmartNoticeClick"

        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"

        android:text="Smart Notice Board"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button1"

        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_40sdp"


        android:layout_marginTop="@dimen/_32sdp"
        android:background="@drawable/button_radius"
        android:drawableEnd="@drawable/baseline_home_24"

        android:onClick="onHomeAutoClick"

        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"

        android:text="Home Automation"
        android:textAlignment="textStart"
        android:textColor="@color/white"

        android:textSize="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button2"

        />

</androidx.constraintlayout.widget.ConstraintLayout>